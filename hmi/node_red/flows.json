    {
        "id": "fault_logic_node",
        "type": "function",
        "z": "8c4b2e1a.01",
        "name": "Map Fault Codes",
        "func": "const map = {\n    'GF': { label: 'Generator Heating Fault', color: 'red', alert: true },\n    'NF': { label: 'System Healthy', color: 'green', alert: false },\n    'MF': { label: 'Mains Failure Fault', color: 'red', alert: true },\n    'FF': { label: 'Feeding Fault', color: 'orange', alert: true },\n    'AF': { label: 'Air Cooling Fault', color: 'orange', alert: true },\n    'EF': { label: 'Excitation Fault', color: 'red', alert: true }\n};\n\nconst status = map[msg.payload] || { label: 'Unknown State: ' + msg.payload, color: 'grey', alert: false };\n\nmsg.payload = status.label;\nmsg.color = status.color;\n\n// Send notification if it's an actual fault\nif (status.alert) {\n    node.send([msg, { payload: \"CRITICAL: \" + status.label }]);\n} else {\n    node.send([msg, null]);\n}\nreturn;",
        "outputs": 2,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 410,
        "y": 100,
        "wires": [
